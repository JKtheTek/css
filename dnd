<script type="text/javascript" charset="utf-8">

    var randomStrings = [

       "Hydra-goblin",
      
      "Invisible-owlbears",
      
      "The floor is Lava",
      
      "Capture the displacerbeast",
      
      "Micro-Tarasque",
      
      "King of the Hill Giant",
      
      "Wheel of Miss-fortune",
      
      "Scale Shelter",
      
      "Banish the Banshee",
      
      "Dragging the Dragon",
      
      "Fire the Flame Elemental",
      
      "Water the Trees",
      
      "Skree Screech",
      
      "Dig your Grave",
      
      "Cats in a bag",
      
      "Orc or Oar",
      
      "Violent Violets",
      
      "Wretched Wench",
      
      "Spellbook of Many things",
      
      "Glorious Gold, Glamorous Gadgets & Greedy Gelatin",
     
    ];

    var randomDiv = document.getElementById("myRandomDiv");

    document.getElementById("myButton").addEventListener("click", function() {

          randomIndex = Math.ceil((Math.random()*randomStrings.length-1));

          newText = randomStrings[randomIndex];

          randomDiv.innerHTML = newText;

    });

</script>
